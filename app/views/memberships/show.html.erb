<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Membership</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to memberships_path, class: button_class(theme: "transparent") do %>
      All Memberships
      <% end %>
      <%= link_to edit_membership_path(@membership), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @membership.name %></p>
      </li>
      <li>
        <p class="font-semibold">Phone:</p>
        <p><%= @membership.phone %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @membership.email %></p>
      </li>
      <li>
        <p class="font-semibold">Voucher:</p>
        <p><%= @membership.voucher %></p>
      </li>
  </ul>
</div>
